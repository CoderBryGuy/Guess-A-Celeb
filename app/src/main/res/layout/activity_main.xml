<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/myImageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/btn0"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/btn3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp" app:layout_constraintEnd_toEndOf="parent" android:onClick="buttonClicked"
            android:tag="3"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/btn2"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/btn3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp" app:layout_constraintEnd_toEndOf="parent" android:onClick="buttonClicked"
            android:tag="2"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/btn1"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/btn2" android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" android:onClick="buttonClicked" android:tag="1"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/btn0"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/btn1" android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" android:onClick="buttonClicked" android:tag="0"/>
</androidx.constraintlayout.widget.ConstraintLayout>